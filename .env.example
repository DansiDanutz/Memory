# MemoApp WhatsApp Bot Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# REQUIRED: WhatsApp Cloud API Configuration
# ========================================
# Meta (Facebook) Business API access token
META_ACCESS_TOKEN=your_meta_access_token_here

# WhatsApp Phone Number ID from Meta Business Manager
WA_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# Webhook verification token (any string you choose)
# Must match the token you set in Meta webhook configuration
META_VERIFY_TOKEN=memory-app-verify-2024

# Public URL for your application (for webhooks)
APP_PUBLIC_URL=https://your-replit-url.repl.co

# ========================================
# REQUIRED: Azure Speech Services Configuration
# ========================================
# Azure Speech Services subscription key for STT/TTS
AZURE_SPEECH_KEY=your_azure_speech_key_here

# Azure Speech Services region (e.g., eastus, westus, etc.)
AZURE_SPEECH_REGION=eastus

# ========================================
# REQUIRED: Security Configuration
# ========================================
# Master encryption key for securing sensitive data
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_MASTER_KEY=generate_with_fernet_generate_key

# ========================================
# REQUIRED: Data Storage Configuration
# ========================================
# Data directory for memory storage
DATA_DIR=data

# ========================================
# REQUIRED: Redis Configuration (for session caching)
# ========================================
# Redis URL for session storage and caching
REDIS_URL=redis://localhost:6379

# ========================================
# REQUIRED: Feature Configuration
# ========================================
# Enable voice features (true/false)
VOICE_ENABLED=true

# Timezone configuration
TZ=UTC

# ========================================
# BACKWARD COMPATIBILITY (do not modify)
# ========================================
# These map to the new variables for legacy code
WHATSAPP_ACCESS_TOKEN=${META_ACCESS_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WA_PHONE_NUMBER_ID}
WEBHOOK_VERIFY_TOKEN=${META_VERIFY_TOKEN}
VERIFY_TOKEN=${META_VERIFY_TOKEN}

# ========================================
# OPTIONAL: OpenAI Configuration
# ========================================
# OpenAI API key for message classification
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# OPTIONAL: Application Settings
# ========================================
# Port for the FastAPI server (default: 5000)
PORT=5000

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Session timeout in minutes (default: 10)
SESSION_TIMEOUT_MINUTES=10

# Voice authentication salt for hashing
VOICE_AUTH_SALT=your_voice_auth_salt_here

# Admin access token for /admin endpoints
ADMIN_TOKEN=admin-secret-2024-change-me

# JWT secret for API authentication tokens
JWT_SECRET=your-secure-jwt-secret-here

# ========================================
# OPTIONAL: Database Configuration
# ========================================
# PostgreSQL database URL (automatically set in Replit)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/memoapp